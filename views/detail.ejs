<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data Contact tidak di temukan <a href="/contact" class="alert-link fw-semibold"> <br> &laquo;
                        kembali kedaftar contact</a>
                </div>
                <% } else { %>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.nama %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">
                                <%= contact.nohp %>
                            </h6>
                            <p class="card-text">
                                <%= contact.email %> <br>
                                <%= contact.addres %>
                            </p>    
                           
                            <a href="/contact" class="card-link fw-medium">&laquo; kembali ke daftar contact</a>
                        </div>
                        <% } %>
                    </div>
        </div>
    </div>
</div>